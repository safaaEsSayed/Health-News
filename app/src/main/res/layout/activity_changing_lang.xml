<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_bg"
    >


    <TextView
        android:id="@+id/tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="Language"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/arabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arabic"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:buttonTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toEndOf="@+id/tex1"
        app:layout_constraintTop_toBottomOf="@+id/tex1" />

    <CheckBox
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/colorAccent"
        android:textSize="16dp"
        android:text="English"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/arabic"
        app:layout_constraintTop_toBottomOf="@+id/arabic" />

    <TextView
        android:id="@+id/tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Country"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/tex1"
        app:layout_constraintTop_toBottomOf="@id/english"/>

    <CheckBox
        android:id="@+id/egypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorAccent"
        android:text="Egypt"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"

        app:layout_constraintStart_toEndOf="@+id/tex1"
        app:layout_constraintTop_toBottomOf="@+id/tex2" />

    <CheckBox
        android:id="@+id/saudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/colorAccent"
        android:textSize="16dp"
        android:text="saudi - Eribia"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/egypt"
        app:layout_constraintTop_toBottomOf="@+id/egypt" />

    <CheckBox
        android:id="@+id/united"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/colorAccent"
        android:textSize="16dp"
        android:text="United state "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/egypt"
        app:layout_constraintTop_toBottomOf="@+id/saudi" />

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@drawable/bck_btn_white"
        android:text="submit"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/united" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Logout"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submit"
        app:layout_constraintVertical_bias="0.746" />

</androidx.constraintlayout.widget.ConstraintLayout>